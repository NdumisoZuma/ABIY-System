@model IEnumerable<ABIY_One.Models.DesignVM>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.area2.AreaName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.design.DesignName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.size.SizeName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        <a><img src="data:image/png;base64,@Convert.ToBase64String(item.design.DesignImage, 0, item.design.DesignImage.Length)" style="width: 40px; height: 40px" alt="" /></a>
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.area2.AreaName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.design.DesignName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.size.SizeName)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.DVMid }) |
        @Html.ActionLink("Details", "Details", new { id = item.DVMid }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.DVMid })
    </td>
</tr>
}

</table>
