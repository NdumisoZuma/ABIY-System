<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ABIY T-Shirts</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ABIY T-Shirts", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("HOME", "Index", "Home")</li>

                    @if (!User.IsInRole("Administrator") && !User.IsInRole("Designer"))
                    {

                        <li class="dropdown">
                            <a href="@Url.Action("Index", "Shopping")" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"> <span class="fa fa-shopping-cart"></span> SHOP <span class="caret"></span></a>
                            <ul class="dropdown-menu dropdown-cart" role="menu" style="background: #000000;color:rgba(107, 37, 37, 1)">
                                <li class="divider"></li>
                                <li>
                                    <a href="@Url.Action("Index","Shopping")">
                                        <i class="fa fa-shopping-bag"></i> ALL
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Male","Shopping")">
                                        <i class="fa fa-shopping-bag"></i> MEN
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Female","Shopping")">
                                        <i class="fa fa-shopping-bag"></i> WOMEN
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Girl","Shopping")">
                                        <i class="fa fa-shopping-bag"></i>  GIRLS
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Boy","Shopping")">
                                        <i class="fa fa-shopping-bag"></i>  BOYS
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Promotion","Shopping")">
                                        <i class="fa fa-shopping-bag"></i> PROMOTION
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="dropdown">
                            <a href="@Url.Action("ShoppingCart", "Shopping")" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"> <span class="fa fa-shopping-cart"></span> Cart (@Html.Action(actionName: "countCartItems", controllerName: "Shopping"))<span class="caret"></span></a>
                            <ul class="dropdown-menu dropdown-cart" role="menu" style="background: #000000;color:rgba(107, 37, 37, 1)">
                                <li class="divider"></li>
                                <li>
                                    <a class="btn btn-default" href="@Url.Action("ShoppingCart", "Shopping")">
                                        <i class="fa fa-shopping-cart"></i> View Cart
                                    </a>
                                </li>

                            </ul>
                        </li>
                        <li>@Html.ActionLink("CATEGORIES", "CatIndex", "Shopping")</li>
                        <li>@Html.ActionLink("DESIGNS", "DesignShop", "Shopping")</li>
                        <li>@Html.ActionLink("ABOUT", "About", "Home")</li>
                        <li>@Html.ActionLink("CONTACT", "Contact", "Home")</li>

                    }
                    @if (User.IsInRole("Administrator"))
                    {


                        <li>@Html.ActionLink("Go to Dashboard", "Index", "Products")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                    }
                    @if (!User.IsInRole("Administrator") && !User.IsInRole("Designer") && User.Identity.IsAuthenticated)
                    {


                        @*<li>@Html.ActionLink("Give Feedback", "Create", "Feedback")</li>
            <li>@Html.ActionLink("My Orders", "MyOrders", "Order")</li>*@
                        <li>@Html.ActionLink("Upload Design", "Create", "UploadDesigns")</li>

                    }
                    <li class="dropdown">
                        @if (User.IsInRole("Designer"))
                        {


                            @*<li>@Html.ActionLink("Manage Designs", "Index", "Design")</li>*@
                            <a href="@Url.Action("Index", "Designs")" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"> <span class="fa fa-sliders"></span> Manage Designs<span class="caret"></span></a>
                            <ul class="dropdown-menu dropdown-cart" role="menu" style="background: #000000;color:rgba(107, 37, 37, 1)">
                                <li>
                                    <a class="btn btn-default" href="@Url.Action("Create", "DesignTypes")">
                                        <i class="fa fa-plus"></i> Add Design Type
                                    </a>
                                </li>
                                <li>
                                    <a class="btn btn-default" href="@Url.Action("Index", "DesignTypes")">
                                        <i class="fa fa-list"></i> View Design Types
                                    </a>
                                </li>
                                <li class="divider"></li>

                                <li>
                                    <a class="btn btn-default" href="@Url.Action("Create", "DesignAreas")">
                                        <i class="fa fa-plus"></i> Add Design Area
                                    </a>
                                </li>
                                <li>
                                    <a class="btn btn-default" href="@Url.Action("Index", "DesignAreas")">
                                        <i class="fa fa-list"></i> View Design Areas
                                    </a>
                                </li>
                            </ul>
                        <li>@Html.ActionLink("Add New Design", "Create", "Designs")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                    }

                        </li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <center>    <p>&copy; @DateTime.Now.Year -Group {14} Developers</p></center>
            </footer>
        </div>

        <!-- footer -->
        <footer id="aa-footer">
            <!-- footer bottom -->
            <div class="aa-footer-top">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="aa-footer-top-area">
                                <div class="row">
                                    <div class="col-md-3 col-sm-6">
                                        <div class="aa-footer-widget">
                                            <h3>Main Menu</h3>
                                            <ul class="aa-footer-nav">
                                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
